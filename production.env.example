# Production Environment Settings

# Server Configuration
PRODUCTION_HOST=0.0.0.0
PRODUCTION_PORT=8000
WAITRESS_THREADS=4

# Security (Replace with secure values in production)
API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Bank Account Information (Replace with secure values)
CITI_ACCOUNT_NUMBER=your-account-number
CITI_ROUTING_NUMBER=your-routing-number
JPMORGAN_ACCOUNT_NUMBER=your-account-number
JPMORGAN_ROUTING_NUMBER=your-routing-number

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/equity-shield/production.log
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Database
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=equity_shield
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Redis (for rate limiting and caching)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Server Configuration
HOST=0.0.0.0
PORT=5001
WAITRESS_THREADS=4

# Security
API_KEY=equity-shield-2024-secure-key
CORS_ORIGINS=*
STRICT_TRANSPORT_SECURITY_ENABLED=true
X_CONTENT_TYPE_OPTIONS=nosniff
X_FRAME_OPTIONS=SAMEORIGIN
X_XSS_PROTECTION=1; mode=block

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200/day;50/hour
RATELIMIT_HEADERS_ENABLED=true

# Caching
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=api_v1_

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/equity-shield/api.log
LOG_MAX_SIZE=104857600
LOG_BACKUP_COUNT=10
